---
pageId: base
---

<!doctype html>
<html lang="en">

<head>
	<title>{{> common/atoms/page-title }}</title>

	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, maximum-scale=3.0">
	<meta name="description" content="{{description}}">
	<meta name="keywords" content="{{keywords}}">
	<meta name="author" content="{{author}}">
	<meta property="og:site_name" content="{{sitename}}" />
	<meta property="og:title" content="{{title}}" />
	<meta property="og:type" content="website">
	<meta property="og:url" content="https://www.brightsidemediagroup.be">

	{{#if noFollow}}
	<meta name="robots" content="noindex,nofollow">
	{{/if}}

	<link rel="preconnect" href="https://fonts.googleapis.com">
	<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
	<link rel="stylesheet"
		href="https://fonts.googleapis.com/css2?family=Nunito+Sans:ital,opsz,wght@0,6..12,200..1000;1,6..12,200..1000&display=swap"
		media="print" onload="this.media='all'">

	<noscript>
		<link rel="stylesheet"
			href="https://fonts.googleapis.com/css2?family=Nunito+Sans:ital,opsz,wght@0,6..12,200..1000;1,6..12,200..1000&display=swap">
	</noscript>

	<link rel="preload" as="image" href="/assets/media/images/hero-banner.png"
		imagesrcset="/assets/media/images/hero-banner.png 1280w, /assets/media/images/hero-banner.png 640w"
		imagesizes="100vw">

	<style>
		/* Critical CSS only */
		.hero-banner {
			display: grid;
			place-items: end stretch;
			min-height: 400px;
		}

		.hero-banner__bg img {
			width: 100%;
			height: 100%;
			object-fit: cover;
		}

		.hero-banner__content {
			text-align: center;
			z-index: 2;
		}
	</style>


	<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "Organization",
  "@id": "https://www.brightsidemediagroup.be/#organization",
  "name": "Brightside Media Group",
  "url": "https://www.brightsidemediagroup.be/",
  "logo": "https://www.brightsidemediagroup.be/assets/logo.png",
  "description": "Brightside Media Group is a Belgium-based media company providing consultancy, production management, and funding solutions for audiovisual and performing arts productions.",
  "foundingLocation": {
    "@type": "Country",
    "name": "Belgium"
  },
  "areaServed": {
    "@type": "Country",
    "name": "Belgium"
  },
  "knowsAbout": [
    "Film production",
    "Television production",
    "Documentary production",
    "Audiovisual production",
    "Production management",
    "Tax shelter funding",
    "Media financing",
    "Creative partnerships",
    "Content production"
  ],
  "hasPart": [
    {
      "@type": "Organization",
      "name": "Brightside Productions",
      "description": "Production company specializing in audiovisual and performing arts projects."
    },
    {
      "@type": "Organization",
      "name": "Flanders Tax Shelter",
      "description": "Funding platform connecting Belgian investors with audiovisual productions."
    },
    {
      "@type": "Organization",
      "name": "Media Partners",
      "description": "Consultancy firm providing legal, financial, and strategic production expertise."
    },
    {
      "@type": "Organization",
      "name": "Famework",
      "description": "Platform connecting content creators, brands, and agencies for partnerships and product placement."
    }
  ],
  "offers": [
    {
      "@type": "Service",
      "name": "Production Management",
      "serviceType": "Film and television production management"
    },
    {
      "@type": "Service",
      "name": "Media Consultancy",
      "serviceType": "Strategic, legal, and financial consultancy for media productions"
    },
    {
      "@type": "Service",
      "name": "Production Funding",
      "serviceType": "Tax shelter and investment structuring for audiovisual productions"
    }
  ],
  "sameAs": [
    "https://www.linkedin.com/company/brightside-media-group"
  ]
}
</script>


	{{#if hasOverviewPageStyling}}
	<link rel="stylesheet" href="/sites/overview-page/assets/css/overview-page.css" type="text/css">
	{{/if}}

	{{#each cssFiles}}
	<link rel="stylesheet" href="{{path}}" type="text/css" {{#if mediaQuery}}media="{{mediaQuery}}" {{/if}}>
	{{/each}}

	{{#each jsFiles}}
	<script {{#if defer}}defer{{/if}} {{#if module}}type="module" {{/if}} src="{{path}}"></script>
	{{/each}}

	{{> common/favicons/fav-icons }}

</head>

<body class="{{ bodyClass }}">

	{{{content}}}

</body>

</html>